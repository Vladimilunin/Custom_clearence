# Example environment variables for cloud deployment

# Database (Cloud SQL or managed PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# AI API Keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# S3 / Cloudflare R2 (Cloud storage)
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY=your_r2_access_key_id
S3_SECRET_KEY=your_r2_secret_access_key
S3_BUCKET_NAME=your-bucket-name
S3_PUBLIC_DOMAIN=https://your-public-domain.com
